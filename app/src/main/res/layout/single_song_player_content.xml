<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/single_song_player_bottom_margin"
    android:layout_marginEnd="@dimen/single_song_player_end_margin"
    android:layout_marginLeft="@dimen/single_song_player_start_margin"
    android:layout_marginRight="@dimen/single_song_player_end_margin"
    android:layout_marginStart="@dimen/single_song_player_start_margin"
    android:layout_marginTop="@dimen/single_song_player_top_margin"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/single_song_player_content_cover_image"
            android:layout_width="@dimen/single_song_player_cover_size"
            android:layout_height="@dimen/single_song_player_cover_size"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/single_song_player_cover_margin"
            android:src="@drawable/ic_music_player_big"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>