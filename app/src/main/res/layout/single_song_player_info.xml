<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@drawable/ic_music_player_big"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2"/>

    <TextView
        android:id="@+id/single_song_player_info_song_title"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="18sp"
        tools:text="PaladioPaladioPaladioPaladioPaladioPaladioPaladioPaladioPaladioPaladioPaladio"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/single_song_player_info_song_artist"
        android:layout_alignStart="@+id/single_song_player_info_song_artist"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/single_song_player_info_song_artist"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:padding="2dp"
        tools:text="David Garrett"
        android:layout_below="@+id/single_song_player_info_song_title"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>